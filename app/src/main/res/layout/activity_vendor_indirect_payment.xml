        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingTop="10dp"

            >

        <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/PaymentNumber"
                android:textColor="#000000"
                android:text=" Payment  Number"
                android:textSize="18px"
                android:layout_weight="0.5"


                />
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/VendorPay"
                android:textColor="#000000"
                android:hint="PaymentNumber"
                android:fontFamily="sans-serif"
                android:textSize="15px"
                android:layout_weight="0.5"

                android:background="@drawable/border_style"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1.0"
            >
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/SelectvendorOrDistributorName"
                android:textColor="#000000"
android:layout_weight="0.5"
                android:text=" Select vendor Or Distributor Name"
                android:textSize="18px"

                android:gravity="left"


                />
            <Spinner

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:id="@+id/Vendornameforindirectpayment"
                android:background="@drawable/border_style"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Enterthepaymentvalue"
                android:textColor="#000000"
                android:text=" Select Reason of Payment"
                android:textSize="18px"

              android:layout_weight="0.5"


                />
            <Spinner

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:id="@+id/selectthereason"
                android:layout_alignParentStart="true"
                android:background="@drawable/border_style"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:weightSum="1.0"
          >

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Selectpono"
                android:textColor="#000000"
                android:text=" Amount to Pay"
                android:textSize="18px"
               android:layout_weight="0.5"



                />
            <EditText

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/VendorPaytotal"
                android:textColor="#000000"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:hint="EnterTotal Amount"
                android:fontFamily="sans-serif"
                android:textSize="15px"
              android:layout_weight="0.5"
                android:background="@drawable/border_style"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="55dp"
            android:layout_marginLeft="20dp"
            android:weightSum="1.0"
            android:gravity="left">

            <Button

                android:layout_width="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="70dp"
                android:layout_height="50px"
                android:layout_weight="0.5"
                android:id="@+id/indirectpaybycash"
                android:textColor="#000000"
                android:text=" PAY BY CASH "
                android:onClick="view"
                android:background="#009985"
                />

            <Button

                android:layout_width="match_parent"

                android:layout_marginRight="70dp"
                android:layout_height="50px"
                android:id="@+id/indirectpaybycheque"
                android:layout_weight="0.5"
                android:textColor="#000000"
                android:text=" PAY BY CHEQUE "
                android:onClick="view"
                android:inputType="numberDecimal"
                android:background="#009985"

                />
            <TextView
                android:layout_width="10px"
                android:layout_height="40px"
                android:layout_weight="1.0"
                android:inputType="number"
                android:textColor="#9B9B9B"
                android:hint="INVOICE NO"
                android:visibility="invisible"
                android:fontFamily="sans-serif-thin"
                android:ems="10"
                android:id="@+id/sales_billno"
                android:textSize="15px"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>