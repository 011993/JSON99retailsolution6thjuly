    android:orientation="vertical"
    android:background="#ff9033"
    android:padding="15dp"
    android:weightSum="100.0">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"

       >


