        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:gravity="left">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Amount_Received"
                android:textColor="#000000"
                android:layout_weight="0.6"
                android:text=" Amount Received"
android:layout_gravity="center"
                android:textSize="20px"


                />
            <EditText

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:id="@+id/VendorPayAmount"
                android:textColor="#000000"
                android:hint=" Amount Received"
                android:fontFamily="sans-serif"

                android:inputType="numberDecimal"
                android:textSize="18px"
                android:layout_weight="0.4"
                android:gravity="left"
                android:background="@drawable/border_style"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="1.0"
            android:gravity="left">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/grandAmount"
                android:textColor="#000000"
                android:text=" Grand Amount"
                android:layout_weight="0.6"
                android:textSize="20px"
                android:gravity="left|center_horizontal"


                />
            <TextView

                android:layout_width="0dp"
                android:layout_height="30px"
                android:id="@+id/VendorPayGrandtotal"
                android:textColor="#000000"
                android:layout_weight="0.4"
                android:hint="Grand Amount"
android:textSize="18px"
                android:gravity="left"


                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:gravity="left">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Amount_Due_toPay"
                android:textColor="#000000"
                android:text=" Vendor DuePayment/Expected Change"
